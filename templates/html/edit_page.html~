    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Pandoky</title>
    <style>
        body { 
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            line-height: 1.6; margin: 20px; max-width: 900px; margin-left: auto; margin-right: auto;
        }
        textarea { 
            width: 100%; 
            min-height: 60vh; 
            padding: 10px;
            border: 1px solid #ccc; 
            border-radius: 4px; 
            font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace;
            font-size: 14px;
            box-sizing: border-box; /* Include padding and border in the element's total width and height */
        }
        .form-actions { margin-top: 1em; display: flex; justify-content: space-between; align-items: center;}
        .form-actions-main button { margin-right: 10px; }
        button, .button-danger, .cancel-link { 
            padding: 10px 15px; 
            color: white; 
            border: none; 
            border-radius: 4px; 
            cursor: pointer;
            font-size: 1em;
            text-decoration: none; /* For anchor acting as button */
            display: inline-block; /* For anchor acting as button */
        }
        button[type="submit"] { background-color: #007bff; }
        button[type="submit"]:hover { background-color: #0056b3; }
        .button-danger { background-color: #dc3545; }
        .button-danger:hover { background-color: #c82333; }
        .cancel-link { 
            background-color: #6c757d;
        }
        .cancel-link:hover { background-color: #5a6268; text-decoration: none;}
        .flash-messages { list-style-type: none; padding: 0; margin-bottom: 1em;}
        .flash-messages li { padding: 10px; border-radius: 4px; margin-bottom: 10px; }
